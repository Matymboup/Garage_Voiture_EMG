@page
@model Garage_Voiture.Areas.Marques.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Nouvelle Marque</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marque.Nom" class="control-label"></label>
                <input asp-for="Marque.Nom" class="form-control" />
                <span asp-validation-for="Marque.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marque.description" class="control-label"></label>
                <input asp-for="Marque.description" class="form-control" />
                <span asp-validation-for="Marque.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="Index">Revenir à la liste</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
