@page
@model Garage_Voiture.Areas.Reparations.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Enregistrer une Réparation</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Repair.Name" class="control-label"></label>
                <input asp-for="Repair.Name" class="form-control" />
                <span asp-validation-for="Repair.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.CoutReparation" class="control-label"></label>
                <input asp-for="Repair.CoutReparation" class="form-control" />
                <span asp-validation-for="Repair.CoutReparation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repair.VoitureId" class="control-label"></label>
                <select asp-for="Repair.VoitureId" class ="form-control" asp-items="ViewBag.VoitureId"></select>

            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a class ="btn btn-primary" asp-page="Index">Revenir à la liste</a>
            </div>
        </form>
    </div>
</div>

<div>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
